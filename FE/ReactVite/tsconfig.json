{
  "compilerOptions": {
    "strict": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "lib": ["dom", "ES2021"],
    "resolveJsonModule": true
  },
  "exclude": [
    "./node_modules/",
    "./dist/",
    "build",
  ],
  "include": [
    "apps/**/*",
    "modules/**/*",
    "./@types/custom.d.ts"
  ]
}
